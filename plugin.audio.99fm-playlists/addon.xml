<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.99fm-playlists"
       name="99FM Playlists"
       version="0.5.1"
       provider-name="nirelbaz">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.requests" version="2.8.1"/>
        <import addon="script.module.routing" version="0.2.0"/>
        <import addon="script.module.beautifulsoup4" version="4.3.2"/>
        <import addon="script.module.html5lib" version="0.999.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">99FM - The greatest songs</summary>
        <summary lang="he">99FM - השירים הטובים ביותר</summary>
        <description lang="en">Great collection of songs created by the gifted 99FM radio station music editors
        </description>
        <description lang="he">אוסף מעולה של שירים שנערכו על-ידי העורכים המוכשרים של תחנת הרדיו 99FM</description>
        <disclaimer lang="en">This is an unofficial addon which created to make 99FM website playlists accessible to
            Kodi users
        </disclaimer>
        <language>he</language>
        <platform>all</platform>
        <license>GNU GENERAL PUBLIC LICENSE Version 2, June 1991</license>
        <website>http://nirelbaz.com/</website>
        <email>nir@nirelbaz.com</email>
    </extension>
</addon>
